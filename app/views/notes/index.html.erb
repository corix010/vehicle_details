<h1>Listing notes</h1>
<% if @vehicle %>
  Vehicle ID: <%= @vehicle.id %><br />
  Vehicle number: <%= @vehicle.number %><br />
  Vehicle created: <%= @vehicle.created_at %><br />
  Vehicle updated: <%= @vehicle.updated_at %>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Vehicle</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.vehicle_id %></td>
    <td><%= link_to 'Show', vehicle_note_path(@vehicle, note) %></td>
    <td><%= link_to 'Edit', edit_vehicle_note_path(@vehicle, note) %></td>
    <td><%= link_to 'Destroy', [@vehicle, note], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Vehicle Note', new_vehicle_note_path(@vehicle) %>
