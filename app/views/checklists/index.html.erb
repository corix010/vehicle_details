<h1>Listing checklists</h1>
<% if @vehicle %>
	Vehicle ID: <%= @vehicle.id %><br />
	Vehicle number: <%= @vehicle.number %><br />
	Vehicle created: <%= @vehicle.created_at %><br />
	Vehicle updated: <%= @vehicle.updated_at %>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Vehicle</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @checklists.each do |checklist| %>
  <tr>
    <td><%= checklist.title %></td>
    <td><%= checklist.vehicle_id %></td>
    <td><%= link_to 'Show', checklist %></td>
    <td><%= link_to 'Edit', edit_checklist_path(checklist) %></td>
    <td><%= link_to 'Destroy', checklist, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

